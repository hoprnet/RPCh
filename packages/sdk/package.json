{
    "name": "@rpch/sdk",
    "version": "1.12.2",
    "license": "LGPL-3.0",
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "files": [
        "build"
    ],
    "keywords": [
        "hopr",
        "rpch",
        "jsonrpc",
        "json-rpc",
        "rpcprovider",
        "rpc-provider",
        "jsonrpcprovider",
        "json-rpc-provider"
    ],
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "prebuild": "node -p \"'export default \\'' + require('./package.json').version + '\\';'\" > src/version.ts",
        "build": "yarn prebuild && tsc",
        "dev": "tsc --watch",
        "format": "prettier --write src/ .eslintrc.js jest.config.ts package.json tsconfig.json",
        "format:ci": "prettier --check src/ .eslintrc.js jest.config.ts package.json tsconfig.json",
        "lint": "eslint --fix src/",
        "lint:ci": "eslint --max-warnings 0 src/",
        "test": "jest --coverage"
    },
    "devDependencies": {
        "@types/debug": "^4.1.10"
    },
    "dependencies": {
        "@rpch/compat-crypto": "^0.8.0",
        "debug": "^4.3.4",
        "ethers": "^5.7.2",
        "isomorphic-ws": "^5.0.0",
        "lz-string": "^1.5.0"
    }
}
